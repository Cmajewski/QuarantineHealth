<%=form_for @workout do |f|%>

        <% if @workout.errors.any?%>
            <div id="error_explanation">
             <h3>There were some errors:</h3>
                <ul>
                 <% @workout.errors.full_messages.each do |message|%>
                    <li><%=message%></li>
                    <%end%>
                </ul>
                <%end%>
            </div>
<%=f.label :platform_name%>
<%=platform_id_field(@workout)%><br>
<%=f.label :instructor_name%>
<%=instructor_id_field(@workout)%><br>
<%=f.label :name%>
<%=f.text_field :name%><br>
<%=f.label :time%>
<%= f.datetime_select(:time, {start_year: 2020, end_year: 2020, start_hour: 0, end_hour: 24, minute_step: 60}) %><br>
<%=f.label :description%>
<%=f.text_area :description%><br>
<%=f.submit "Create Class"%>

<%end%>

